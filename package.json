{
  "name": "@giveth/giveth-contracts-template",
  "description": "Template for development and testing of smart contracts with Hardhat",
  "author": {
    "name": "Giveth Developers",
    "url": "https://giveth.io"
  },
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "keywords": [
    "solidity",
    "hardhat",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paxthemax/giveth-contracts-test"
  },
  "files": [
    "contracts",
    "!contracts/test",
    "artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json",
    "!artifacts/contracts/test/**/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "compile": "hardhat compile",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:check": "prettier-check contracts/**/*.sol test/**/*.ts types/*.ts",
    "size-contracts": "hardhat compile && hardhat size-contracts",
    "test": "hardhat test",
    "clear-cache": "rm -rf artifacts/ cache/ typechain/",
    "coverage": "RUN_COVERAGE=1 hardhat coverage"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/console-log-level": "^1.4.2",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "console-log-level": "^1.4.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.3",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-typechain": "^0.3.5",
    "lodash": "^4.17.21",
    "mocha": "^9.2.0",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "prettier": "^2.5.1",
    "prettier-check": "^2.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.18",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@1hive/evmcrispr": "^0.4.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0"
  }
}
